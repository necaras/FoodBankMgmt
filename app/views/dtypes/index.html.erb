<div class="container">

    <%= render :partial => "home/header" %>
		
	<div class="main">

		<div class="item">
            
            <div class="date">
                <div>&nbsp</div>
                <span>&nbsp</span>
            </div>

            <div class="content">
                <h1>Listing Donor/Donee Types</h1>
                
                <div class="body">

                    <% if @dtypes.nil? || @dtypes.empty? %>
                        
                        <p>There are no donor/donee types.</p>
                    
                    <% else %>                

                        <table>
                          <tr>
                            <th>Description</th>
                            <th></th>
                            <th></th>
                            <th></th>
                          </tr>

                        <% @dtypes.each do |dtype| %>
                          <tr bgcolor="<%= cycle("E8F6BF", "FFFFFF")%>">
                            <td><%= dtype.description %>
                            <td class="actions"><%= link_to 'Show', dtype %></td>
                            <td class="actions"><%= link_to 'Edit', edit_dtype_path(dtype) %></td>
                            <td class="actions"><%= link_to 'Delete', dtype, :confirm => 'Are you sure?', :method => :delete %></td>
                          </tr>
                        <% end %>
                        </table>
                        
                    <% end %>

                    <br />

                    <%= link_to 'New Donor/Donee Type', new_dtype_path %>
                </div>
            </div>
        </div>
	</div>

    <%= render :partial => "home/navigation" %>
	
	<div class="clearer"><span></span></div>

    <%= render :partial => "home/footer" %>

</div>       