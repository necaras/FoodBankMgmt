<div class="container">

    <%= render :partial => "home/header" %>
		
	<div class="main">

		<div class="item">
            
            <div class="date">
                <div>&nbsp</div>
                <span>&nbsp</span>
            </div>

            <div class="content">
                <h1>Listing Volunteer Types</h1>
                
                <div class="body">

                    <% if @vtypes.nil? || @vtypes.empty? %>
                        
                        <p>There are no volunteer types.</p>
                    
                    <% else %>   

                        <table width="100%">
                          <tr width="100%">
                            <th>Description</th>
                            <th width="8%"></th>
                            <th width="6%"></th>
                          </tr>

                        <% @vtypes.each do |vtype| %>
                          <tr bgcolor="<%= cycle("E8F6BF", "FFFFFF")%>">
                            <td><%= vtype.description %></td>
                            <td><%= link_to 'Show', vtype %></td>
                            <td><%= link_to 'Edit', edit_vtype_path(vtype) %></td>
                          </tr>
                        <% end %>
                        </table>
                    <% end %>
                    <br />

                    <%= link_to 'New Volunteer Type', new_vtype_path %>
                </div>
            </div>
        </div>
	</div>

    <%= render :partial => "home/navigation" %>
	
	<div class="clearer"><span></span></div>

    <%= render :partial => "home/footer" %>

</div> 