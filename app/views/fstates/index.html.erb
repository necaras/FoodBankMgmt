<div class="container">

    <%= render :partial => "home/header" %>
		
	<div class="main">

		<div class="item">
            
            <div class="date">
                <div>&nbsp</div>
                <span>&nbsp</span>
            </div>

            <div class="content">
                <h1>Listing Family States</h1>
                
                <div class="body">  
                
                    <% if @fstates.nil? || @fstates.empty? %>
                        
                        <p>There are no family states.</p>
                    
                    <% else %>
                    
                        <table>
                          <tr>
                            <th>Description</th>
                            <th></th>
                            <th></th>
                            <th></th>
                          </tr>

                        <% @fstates.each do |fstate| %>
                          <tr bgcolor="<%= cycle("E8F6BF", "FFFFFF")%>">
                            <td><%= fstate.description %></td>
                            <td class="actions"><%= link_to 'Show', fstate %></td>
                            <td class="actions"><%= link_to 'Edit', edit_fstate_path(fstate) %></td>
                            <td class="actions"><%= link_to 'Delete', fstate, :confirm => 'Are you sure?', :method => :delete %></td>
                          </tr>
                        <% end %>
                        </table>
                    
                    <% end %>

                    <br />

                    <%= link_to 'New State', new_fstate_path %>
                </div>
            </div>
        </div>
	</div>

    <%= render :partial => "home/navigation" %>
	
	<div class="clearer"><span></span></div>

    <%= render :partial => "home/footer" %>

</div>  