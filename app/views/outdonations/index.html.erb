<div class="container">

    <%= render :partial => "home/header" %>
		
	<div class="main">

		<div class="item">
            
            <div class="date">
                <div>&nbsp</div>
                <span>&nbsp</span>
            </div>

            <div class="content">
                <h1>Listing Outgoing Donations</h1>
                
                <div class="body">  
                
                    <% if @outdonations.nil? || @outdonations.empty? %>
                        
                        <p>There are no outgoing donations.</p>
                    
                    <% else %>

                        <table>
                          <tr>
                            <th>Donee</th>
                            <th>Date</th>
                            <th>lbs.</th>
                            <th>$</th>
                            <th></th>
                            <th></th>
                            <th></th>
                          </tr>

                        <% @outdonations.each do |outdonation| %>
                          <tr bgcolor="<%= cycle("E8F6BF", "FFFFFF")%>">
                            <td><%= Donee.find(outdonation.donee_id).name %></td>
                            <td><%= outdonation.donationdate %></td>
                            <td><%= outdonation.weightdonated %></td>
                            <td><%= outdonation.moneydonated %></td>
                            <td class="actions"><%= link_to 'Show', outdonation %></td>
                            <td class="actions"><%= link_to 'Edit', edit_outdonation_path(outdonation) %></td>
                            <td class="actions"><%= link_to 'Delete', outdonation, :confirm => 'Are you sure?', :method => :delete %></td>
                          </tr>
                        <% end %>
                        </table>
                    <% end %>

                    <br />

                    <%= link_to 'New Outgoing Donation', new_outdonation_path %>
                </div>
            </div>
        </div>
	</div>

    <%= render :partial => "home/navigation" %>
	
	<div class="clearer"><span></span></div>

    <%= render :partial => "home/footer" %>

</div> 