<%= form_for(@outdonation) do |f| %>
  <% if @outdonation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@outdonation.errors.count, "error") %> prohibited this outdonation from being saved:</h2>

      <ul>
      <% @outdonation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :donee %><br />
    <% @donees = Donee.all.map{|d| [d.name, d.id]} %>
    <%= f.select(:donee_id, @donees, {:include_blank => "--Select a Donee--"}) %>
  </div>
  <div class="field">
    <%= f.label :donationdate, "Date of Donation" %><br />
    <%= f.date_select :donationdate %>
  </div>
  <div class="field">
    <%= f.label :weightdonated, "Weight of Items Donated" %><br />
    <%= f.text_field :weightdonated %>
  </div>
  <div class="field">
    <%= f.label :moneydonated, "Amount of Money Donated" %><br />
    <%= f.text_field :moneydonated %>
  </div>
  <div class="field">
    <%= f.label :details %><br />
    <%= f.text_area :details %>
  </div>
  <div class="actions">
    <% if params[:action] == "new"
            @submit_label = "Create Donation"
       else
            @submit_label = "Update Donation"
       end %>
    <%= f.submit @submit_label%>
  </div>
<% end %>
