<div class="container">

    <%= render :partial => "home/header" %>
		
	<div class="main">

		<div class="item">
            
            <div class="date">
                <div>&nbsp</div>
                <span>&nbsp</span>
            </div>

            <div class="content">
                <h1>Editing Family State</h1>
                
                <div class="body">

                    <table>
                      <tr width="100%">
                        <th>Description</th>
                        <th width="8%"></th>
                        <th width="6%"></th>
                      </tr>

                    <% @fstates.each do |fstate| %>
                      <tr bgcolor="<%= cycle("E8F6BF", "FFFFFF")%>">
                        <td><%= fstate.description %></td>
                        <td><%= link_to 'Show', fstate %></td>
                        <td><%= link_to 'Edit', edit_fstate_path(fstate) %></td>
                      </tr>
                    <% end %>
                    </table>

                    <br />

                    <%= link_to 'New State', new_fstate_path %>
                </div>
            </div>
        </div>
	</div>

    <%= render :partial => "home/navigation" %>
	
	<div class="clearer"><span></span></div>

    <%= render :partial => "home/footer" %>

</div>   