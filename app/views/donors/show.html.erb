<div class="container">

	<%= render :partial => "home/header" %>

	<div class="main">

		<div class="item">

			<div class="date">
				<div>&nbsp</div>
				<span>&nbsp</span>
			</div>

			<div class="content">
				<h1>Showing Donor</h1>

				<div class="body">  
				
					<% if not notice.nil? %>
						<p id="notice"><%= notice %></p>
					<% end %>  
					
					<p>
						<b>Name:</b>
						<%= @donor.name %>
					</p>

					<p>
						<b>Phone Number:</b>
						<%= @donor.phone1 %>
					</p>

					<p>
						<b>Alternate Phone Number:</b>
						<%= @donor.phone2 %>
					</p>

					<p>
						<b>Unit:</b>
						<%= @donor.unit %>
					</p>

					<p>
						<b>Address:</b>
						<%= @donor.address %>
					</p>

					<p>
						<b>Email Address:</b>
						<%= @donor.emailaddress %>
					</p>

					<p>
						<b>Contact:</b>
						<%= @donor.contact %>
					</p>

					<p>
						<b>Location:</b>
						<%= @donor.location.get_location_name %>
					</p>

					<p>
						<b>Donor Type:</b>
						<%= Dtype.find(@donor.dtype_id).description unless (@donor.dtype_id.nil?) %>
					</p>      

					<%= link_to 'Edit', edit_donor_path(@donor) %> |
					<%= link_to 'Back', donors_path %>
				</div><!--body-->	
			</div><!--content-->
		</div><!--item-->
		
		<div class="item">

			<div class="date">
				<div>&nbsp</div>
				<span>&nbsp</span>
			</div>

			<div class="content">
				<h1>Incoming Donations</h1>
				<div class="body">
					<% if @donor.indonations.nil? || @donor.indonations.empty? %>

						<p>There are no donations from this donor.</p>

					<% else %>                    
						<table width="100%">
							<tr width="100%">
								<th>Donor</th>
								<th>Date</th>
								<th>lbs.</th>
								<th>$</th>
								<th width="6%"></th>
								<th width="8%"></th>
							</tr>
							<%= render @donor.indonations %>
						</table>

					<% end %>

					<%= link_to 'Add New Donation from Donor', new_indonation_path(:donor_id => @donor.id) %> 
				</div><!--body-->	
			</div><!--content-->
		</div><!--item-->				
	</div><!--main-->

	<%= render :partial => "home/navigation" %>

	<div class="clearer"><span></span></div>

	<%= render :partial => "home/footer" %>

</div><!--container-->
