<div class="container">

	<%= render :partial => "home/header" %>

	<div class="main">

		<div class="item">

			<div class="date">
				<div>&nbsp</div>
				<span>&nbsp</span>
			</div>

			<div class="content">
				<h1>Showing Household</h1>

				<div class="body">  
				
					<% if not notice.nil? %>
						<p id="notice"><%= notice %></p>
					<% end %>  
					
					<p>
						<b>Unit:</b>
						<%= @household.unit %>
					</p>

					<p>
						<b>Address:</b>
						<%= @household.address %>
					</p>

					<p>
						<b>Postal Code:</b>
						<%= @household.postalcode %>
					</p>

					<p>
						<b>Community:</b>
						<%= Community.find(@household.community_id).name %>
					</p>

					<p>
						<b>City:</b>
						<%= Location.find(Community.find(@household.community_id).location_id).get_location_name %>
					</p>
					
					<%= link_to 'Edit', edit_household_path(@household) %> |
					<%= link_to 'Back', households_path %>

				</div><!--body-->
			</div><!--content-->
		</div><!--item-->
		
		<div class="item">

			<div class="date">
				<div>&nbsp</div>
				<span>&nbsp</span>
			</div>

			<div class="content">
				<h1>Families</h1>

				<div class="body">  
					<% if @household.families.nil? || @household.families.empty? %>

						<p>There are no families in this household.</p>

					<% else %>

						<table>
                          <tr>
                            <th>Head of Household</th>
                            <th>Phone</th>
                            <th></th>
                            <th></th>
                            <th></th>
                          </tr>
						<%= render @household.families %>
						</table>

					<% end %>

					<%= link_to 'Add New Family to Household', new_family_path(:household_id => @household.id) %>

				</div><!--body-->
			</div><!--content-->
		</div><!--item-->
						
	</div><!--main-->

	<%= render :partial => "home/navigation" %>

	<div class="clearer"><span></span></div>

	<%= render :partial => "home/footer" %>

</div><!--container-->
