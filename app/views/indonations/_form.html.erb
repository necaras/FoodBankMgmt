<%= form_for(@indonation) do |f| %>
  <% if @indonation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@indonation.errors.count, "error") %> prohibited this indonation from being saved:</h2>

      <ul>
      <% @indonation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :donor %><br />
    <% @donors = Donor.all.map{|d| [d.name, d.id]} %>
    <%= f.select(:donor_id, @donors, {:include_blank => "--Select a Donor--"}) %>
  </div>
  <div class="field">
    <%= f.label :donationdate, "Date of Donation" %><br />
    <%= f.date_select :donationdate %>
  </div>
  <div class="field">
    <%= f.label :weightdonated, "Weight of Items Donated" %><br />
    <%= f.text_field :weightdonated %>
  </div>
  <div class="field">
    <%= f.label :moneydonated, "Amount of Money Donated" %><br />
    <%= f.text_field :moneydonated %>
  </div>
  <div class="field">
    <%= f.label :details %><br />
    <%= f.text_area :details %>
  </div>
  <div class="actions">
    <% if params[:action] == "new"
            @submit_label = "Create Donation"
       else
            @submit_label = "Update Donation"
       end %>
    <%= f.submit @submit_label%>
  </div>
<% end %>
