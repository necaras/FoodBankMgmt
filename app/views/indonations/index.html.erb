<div class="container">

    <%= render :partial => "home/header" %>
		
	<div class="main">

		<div class="item">
            
            <div class="date">
                <div>&nbsp</div>
                <span>&nbsp</span>
            </div>

            <div class="content">
                <h1>Listing Incoming Donations</h1>
                
                <div class="body">  
                
                    <% if @indonations.nil? || @indonations.empty? %>
                        
                        <p>There are no incoming donations.</p>
                    
                    <% else %>

                        <table>
                          <tr>
                            <th>Donor</th>
                            <th>Date</th>
                            <th>lbs.</th>
                            <th>$</th>
                            <th></th>
                            <th></th>
                            <th></th>
                          </tr>

                        <% @indonations.each do |indonation| %>
                          <tr bgcolor="<%= cycle("E8F6BF", "FFFFFF")%>">
                            <td><%= Donor.find(indonation.donor).name %></td>
                            <td><%= indonation.donationdate %></td>
                            <td><%= indonation.weightdonated %></td>
                            <td><%= indonation.moneydonated %></td>
                            <td class="actions"><%= link_to 'Show', indonation %></td>
                            <td class="actions"><%= link_to 'Edit', edit_indonation_path(indonation) %></td>
                            <td class="actions"><%= link_to 'Delete', indonation, :confirm => 'Are you sure?', :method => :delete %></td>
                          </tr>
                        <% end %>
                        </table>
                    <% end %>

                    <br />

                    <%= link_to 'New Incoming Donation', new_indonation_path %>
                    <br />
                </div>
            </div>
        </div>
	</div>

    <%= render :partial => "home/navigation" %>
	
	<div class="clearer"><span></span></div>

    <%= render :partial => "home/footer" %>

</div> 