<div class="container">

    <%= render :partial => "home/header" %>
		
	<div class="main">

		<div class="item">
            
            <div class="date">
                <div>&nbsp</div>
                <span>&nbsp</span>
            </div>

            <div class="content">
                <h1>Showing Donee</h1>
                
                <div class="body">  

                    <p>
                      <b>Name:</b>
                      <%= @donee.name %>
                    </p>

                    <p>
                      <b>Phone Number:</b>
                      <%= @donee.phone1 %>
                    </p>

                    <p>
                      <b>Alternate Phone Number:</b>
                      <%= @donee.phone2 %>
                    </p>

                    <p>
                      <b>Unit:</b>
                      <%= @donee.unit %>
                    </p>

                    <p>
                      <b>Address:</b>
                      <%= @donee.address %>
                    </p>

                    <p>
                      <b>Email Address:</b>
                      <%= @donee.emailaddress %>
                    </p>

                    <p>
                      <b>Contact:</b>
                      <%= @donee.contact %>
                    </p>

                    <p>
                      <b>Location:</b>
                      <%= @donee.location.get_location_name %>
                    </p>

                    <p>
                      <b>Donee Type:</b>
                      <%= Dtype.find(@donee.dtype_id).description unless (@donee.dtype_id.nil? || @donee.dtype_id.empty?) %>
                    </p>


                    <%= link_to 'Edit', edit_donee_path(@donee) %> |
                    <%= link_to 'Back', donees_path %>
                </div>
            </div>
        </div>
	</div>

    <%= render :partial => "home/navigation" %>
	
	<div class="clearer"><span></span></div>

    <%= render :partial => "home/footer" %>

</div> 