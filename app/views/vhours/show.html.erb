<div class="container">

    <%= render :partial => "home/header" %>
		
	<div class="main">

		<div class="item">
            
            <div class="date">
                <div>&nbsp</div>
                <span>&nbsp</span>
            </div>

            <div class="content">
                <h1>Showing Volunteer Hours Entry</h1>
                
                <div class="body">

                    <p>
                      <b>Volunteer:</b>
                      <%= @vhour.volunteer.get_volunteer_name %>
                    </p>

                    <p>
                      <b>Date:</b>
                      <%= @vhour.date %>
                    </p>

                    <p>
                      <b>Hours Worked:</b>
                      <%= @vhour.hoursworked %>
                    </p>

                    <p>
                      <b>Details:</b>
                      <%= @vhour.details %>
                    </p>


                    <%= link_to 'Edit', edit_vhour_path(@vhour) %> |
                    <%= link_to 'Back', vhours_path %>
                </div>
            </div>
        </div>
	</div>

    <%= render :partial => "home/navigation" %>
	
	<div class="clearer"><span></span></div>

    <%= render :partial => "home/footer" %>

</div>  