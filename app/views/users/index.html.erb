<div class="container">

    <%= render :partial => "home/header" %>
		
	<div class="main">

		<div class="item">
            
            <div class="date">
                <div>&nbsp</div>
                <span>&nbsp</span>
            </div>

            <div class="content">
                <h1>Listing Users</h1>
                
                <div class="body">
                    
                    <% if @users.nil? || @users.empty? %>
                        
                        <p>There are no users.</p>
                    
                    <% else %> 

			<table width="100%">
			  <tr width="100%">
			    <th>Email</th>
			    <th>Username</th>
			    <th width="6%"></th>
			    <th width="6%"></th>
			    <th width="10%"></th>			    			    
			  </tr>

			  <% @users.each do |user| %>
                          <tr bgcolor="<%= cycle("E8F6BF", "FFFFFF")%>">
			      <td><%= user.email %></td>
			      <td><%= user.username %></td>
			      <td><%= link_to 'Show', user %></td>
			      <td><%= link_to 'Edit', edit_user_path(user) %></td>
			      <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
			    </tr>
			  <% end %>
			</table>

			<br />
			
		    <% end %>

		<br />

		<%= link_to 'New User', new_user_path %>
                </div>
            </div>
        </div>
	</div>

    <%= render :partial => "home/navigation" %>
	
	<div class="clearer"><span></span></div>

    <%= render :partial => "home/footer" %>

</div>    
