<div class="container">

    <%= render :partial => "home/header" %>
		
	<div class="main">

		<div class="item">
            
            <div class="date">
                <div>&nbsp</div>
                <span>&nbsp</span>
            </div>

            <div class="content">
                <h1>Listing Volunteers</h1>
                
                <div class="body">  
                
                    <% if @volunteers.nil? || @volunteers.empty? %>
                        
                        <p>There are no volunteers.</p>
                    
                    <% else %>

                        <table width="100%">
                          <tr width="100%">
                            <th>Name</th>
                            <th>Type</th>
                            <th width="8%"></th>
                            <th width="6%"></th>
                          </tr>

                        <% @volunteers.each do |volunteer| %>
                          <tr bgcolor="<%= cycle("E8F6BF", "FFFFFF")%>">
                            <td><%= volunteer.get_volunteer_name %></td>
                            <td><%= volunteer.vtype.try(:description) %></td>
                            <td><%= link_to 'Show', volunteer %></td>
                            <td><%= link_to 'Edit', edit_volunteer_path(volunteer) %></td>
                          </tr>
                        <% end %>
                        </table>
                    <% end %>

                    <br />

                    <%= link_to 'New Volunteer', new_volunteer_path %>
                    
                </div>
            </div>
        </div>
	</div>

    <%= render :partial => "home/navigation" %>
	
	<div class="clearer"><span></span></div>

    <%= render :partial => "home/footer" %>

</div>   