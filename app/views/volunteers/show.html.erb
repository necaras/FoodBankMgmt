<div class="container">

    <%= render :partial => "home/header" %>
		
	<div class="main">

		<div class="item">
            
            <div class="date">
                <div>&nbsp</div>
                <span>&nbsp</span>
            </div>

            <div class="content">
                <h1>Showing Volunteer</h1>
                
                <div class="body">

                    <p>
                      <b>Volunteer Type:</b>
                      <%= @volunteer.vtype.try(:description) %>
                    </p>

                    <p>
                      <b>Name:</b>
                      <%= @volunteer.get_volunteer_name %>
                    </p>
                    
                    <p>
                      <b>Gender:</b>
                      <%= @volunteer.gender %>
                    </p>
                    
                    <p>
                      <b>Unit:</b>
                      <%= @volunteer.unit %>
                    </p>

                    <p>
                      <b>Address:</b>
                      <%= @volunteer.address %>
                    </p>
                    
                    <p>
                      <b>City:</b>
                      <%= @volunteer.location.get_location_name %>
                    </p>
                    
                    <p>
                      <b>Postal Code:</b>
                      <%= @volunteer.postalcode %>
                    </p>
                    
                    <p>
                      <b>Primary Phone Number:</b>
                      <%= @volunteer.phone1 %>
                    </p>

                    <p>
                      <b>Alternate Phone Number:</b>
                      <%= @volunteer.phone2 %>
                    </p>

                    <p>
                      <b>Birth Date:</b>
                      <%= @volunteer.birthdate %>
                    </p>

                    <p>
                      <b>Start Date:</b>
                      <%= @volunteer.startdate %>
                    </p>

                    <p>
                      <b>Email Address:</b>
                      <%= @volunteer.emailaddress %>
                    </p>

                    <p>
                      <b>Emergency Contact Name:</b>
                      <%= @volunteer.emergcontactname %>
                    </p>

                    <p>
                      <b>Emergency Contact Phone Number:</b>
                      <%= @volunteer.emergcontactphone %>
                    </p>

                    <p>
                      <b>Notes:</b>
                      <%= @volunteer.notes %>
                    </p>


                    <%= link_to 'Edit', edit_volunteer_path(@volunteer) %> |
                    <%= link_to 'Back', volunteers_path %>
                </div>
            </div>
        </div>
	</div>

    <%= render :partial => "home/navigation" %>
	
	<div class="clearer"><span></span></div>

    <%= render :partial => "home/footer" %>

</div>   