<%= form_for(@volunteer) do |volunteer_form| %>
  <% if @volunteer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@volunteer.errors.count, "error") %> prohibited this volunteer from being saved:</h2>

      <ul>
      <% @volunteer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= volunteer_form.label :vtype, "Volunteer Type" %><br />
    <% @vtypes = Vtype.all.map{|v| [v.description, v.id]} %>
    <%= volunteer_form.select(:vtype_id, @vtypes, {:include_blank => "--Select a Type--"}) %>
  </div>
  <div class="field">
    <%= volunteer_form.label :gender, "Gender" %><br />
    <%= volunteer_form.select(:gender, Volunteer::GENDERS) %>
  </div>
  <div class="field">
    <%= volunteer_form.label :firstname, "First Name" %><br />
    <%= volunteer_form.text_field :firstname %>
  </div>
  <div class="field">
    <%= volunteer_form.label :lastname, "Last Name" %><br />
    <%= volunteer_form.text_field :lastname %>
  </div>
  <div class="field">
    <%= volunteer_form.label :middlename, "Middle Name" %><br />
    <%= volunteer_form.text_field :middlename %>
  </div>
  <div class="field">
    <%= volunteer_form.label :unit %><br />
    <%= volunteer_form.text_field :unit %>
  </div>
  <div class="field">
    <%= volunteer_form.label :address %><br />
    <%= volunteer_form.text_field :address %>
  </div>
  <div class="field">
    <%= volunteer_form.label :location, "City" %><br />
    <% @locations = Location.all.map{|l| [l.get_location_name, l.id]} %>
    <%= volunteer_form.select(:location_id, @locations, {:include_blank => "--Select a Location--"}) %>
  </div>
  <div class="field">
    <%= volunteer_form.label :phone1, "Primary Phone Number" %><br />
    <%= volunteer_form.text_field :phone1 %>
  </div>
  <div class="field">
    <%= volunteer_form.label :phone2, "Alternate Phone Number" %><br />
    <%= volunteer_form.text_field :phone2 %>
  </div>
  <div class="field">
    <%= volunteer_form.label :birthdate, "Birth Date" %><br />
    <%= volunteer_form.date_select :birthdate %>
  </div>
  <div class="field">
    <%= volunteer_form.label :startdate, "Start Date" %><br />
    <%= volunteer_form.date_select :startdate %>
  </div>
  <div class="field">
    <%= volunteer_form.label :emailaddress, "Email Address" %><br />
    <%= volunteer_form.text_field :emailaddress %>
  </div>
  <div class="field">
    <%= volunteer_form.label :postalcode, "Postal Code" %><br />
    <%= volunteer_form.text_field :postalcode %>
  </div>
  <div class="field">
    <%= volunteer_form.label :emergcontactname, "Emergency Contact Name" %><br />
    <%= volunteer_form.text_field :emergcontactname %>
  </div>
  <div class="field">
    <%= volunteer_form.label :emergcontactphone, "Emergency Contact Phone" %><br />
    <%= volunteer_form.text_field :emergcontactphone %>
  </div>
  <div class="field">
    <%= volunteer_form.label :notes %><br />
    <%= volunteer_form.text_area :notes %>
  </div>
  <div class="actions">
    <%= volunteer_form.submit %>
  </div>
<% end %>
