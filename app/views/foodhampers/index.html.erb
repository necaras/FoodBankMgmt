<div class="container">

    <%= render :partial => "home/header" %>
		
	<div class="main">

		<div class="item">
            
            <div class="date">
                <div>&nbsp</div>
                <span>&nbsp</span>
            </div>

            <div class="content">
                <h1>Listing Food Hampers</h1>
                
                <div class="body">

                    <% if @foodhampers.nil? || @foodhampers.empty? %>
                        
                        <p>There are no food hampers.</p>
                    
                    <% else %>    

                        <table width="100%">
                          <tr width="100%">
                            <th>Date</th>
                            <th>Referral</th>
                            <th>Family</th>
                            <th width="8%"></th>
                            <th width="6%"></th>
                          </tr>

                        <% @foodhampers.each do |foodhamper| %>
                          <tr bgcolor="<%= cycle("E8F6BF", "FFFFFF")%>">
                            <td><%= foodhamper.pickupdate %></td>
                            <td><%= foodhamper.referral.get_referral_summary %></td>
                            <td><%= foodhamper.family.get_family_summary %></td>
                            <td><%= link_to 'Show', foodhamper %></td>
                            <td><%= link_to 'Edit', edit_foodhamper_path(foodhamper) %></td>
                          </tr>
                        <% end %>
                        </table>
                        
                    <% end %>

                        <br />

                        <%= link_to 'New Hamper', new_foodhamper_path %>
                        <br />
                        Total Hampers: <%= Foodhamper.GetHamperCount("1/1/2000", Date.today+1.day) %><br />
                        Weight: <%= Foodhamper.GetHamperWeight("1/1/2000", Date.today+1.day) %><br />
                </div>
            </div>
        </div>
	</div>

    <%= render :partial => "home/navigation" %>
	
	<div class="clearer"><span></span></div>

    <%= render :partial => "home/footer" %>

</div>    
