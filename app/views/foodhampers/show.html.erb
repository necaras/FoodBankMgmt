    <%= render :partial => "home/header" %>
		
	<div class="main">

		<div class="item">
            
            <div class="date">
                <div>&nbsp</div>
                <span>&nbsp</span>
            </div>

            <div class="content">
                <h1>Showing Food Hamper</h1>
                
                <div class="body">

                    <p>
                      <b>Weight:</b>
                      <%= @foodhamper.weight %>
                    </p>

                    <p>
                      <b>Pickup Date:</b>
                      <%= @foodhamper.pickupdate %>
                    </p>

                    <p>
                      <b>Pickup Person:</b>
                      <%= @foodhamper.pickupperson %>
                    </p>

                    <p>
                      <b>Referral:</b>
                      <%= @foodhamper.referral %>
                    </p>

                    <p>
                      <b>Family:</b>
