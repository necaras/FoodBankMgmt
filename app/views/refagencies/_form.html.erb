<%= form_for(@refagency) do |f| %>
  <% if @refagency.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@refagency.errors.count, "error") %> prohibited this refagency from being saved:</h2>

      <ul>
      <% @refagency.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :phone1, "Primary Phone Number" %><br />
    <%= f.text_field :phone1 %>
  </div>
  <div class="field">
    <%= f.label :phone2, "Alternate Phone Number" %><br />
    <%= f.text_field :phone2 %>
  </div>
  <div class="field">
    <%= f.label :unit %><br />
    <%= f.text_field :unit %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>  
  <div class="field">
    <%= f.label :location, "City" %><br />
    <% @locations = Location.all.map{|l| [l.get_location_name, l.id]} %>
    <%= f.select(:location_id, @locations, {:include_blank => "--Select a Location--"}) %>
  </div>
  <div class="field">
    <%= f.label :contact %><br />
    <%= f.text_field :contact %>
  </div>
  <div class="field">
    <%= f.label :emailaddress, "Email Address" %><br />
    <%= f.text_field :emailaddress %>
  </div>
  <div class="field">
    <%= f.label :refagencycategory, "Referral Agency Category" %><br />
    <% @refagencycategories = Refagencycategory.all.map{|rac| [rac.description, rac.id]} %>
    <%= f.select(:refagencycategory_id, @refagencycategories, {:include_blank => "--Select a Category--"}) %>
  </div>
  <div class="actions">
    <% if params[:action] == "new"
            @submit_label = "Create Agency"
       else
            @submit_label = "Update Agency"
       end %>
    <%= f.submit @submit_label%>
  </div>
<% end %>
