<div class="container">

    <%= render :partial => "home/header" %>
		
	<div class="main">

		<div class="item">
            
            <div class="date">
                <div>&nbsp</div>
                <span>&nbsp</span>
            </div>

            <div class="content">
                <h1>Listing Referral Agencies</h1>
                
                <div class="body">

                    <% if @refagencies.nil? || @refagencies.empty? %>
                        
                        <p>There are no referral agencies.</p>
                    
                    <% else %>    

                        <table>
                          <tr>
                            <th>Name</th>
                            <th>Category</th>
                            <th></th>
                            <th></th>
                            <th></th>
                          </tr>

                        <% @refagencies.each do |refagency| %>
                          <tr bgcolor="<%= cycle("E8F6BF", "FFFFFF")%>">
                            <td><%= refagency.name %></td>
                            <td><%= refagency.refagencycategory.try(:description) %></td>
                            <td class="actions"><%= link_to 'Show', refagency %></td>
                            <td class="actions"><%= link_to 'Edit', edit_refagency_path(refagency) %></td>
                            <td class="actions"><%= link_to 'Delete', refagency, :confirm => 'Are you sure?', :method => :delete %></td>
                          </tr>
                        <% end %>
                        </table>
                    <% end %>

                    <br />

                    <%= link_to 'New Referral Agency', new_refagency_path %>
                </div>
            </div>
        </div>
	</div>

    <%= render :partial => "home/navigation" %>
	
	<div class="clearer"><span></span></div>

    <%= render :partial => "home/footer" %>

</div>                          
