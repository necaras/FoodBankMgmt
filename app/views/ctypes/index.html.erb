<div class="container">

    <%= render :partial => "home/header" %>
		
	<div class="main">

		<div class="item">
            
            <div class="date">
                <div>&nbsp</div>
                <span>&nbsp</span>
            </div>

            <div class="content">
                <h1>Listing Client Type</h1>
                
                <div class="body">

                    <% if @ctypes.nil? || @ctypes.empty? %>
                        
                        <p>There are no client types.</p>
                    
                    <% else %>                

                        <table>
                          <tr>
                            <th>Description</th>
                            <th></th>
                            <th></th>
                            <th></th>
                          </tr>

                        <% @ctypes.each do |ctype| %>
                          <tr bgcolor="<%= cycle("E8F6BF", "FFFFFF")%>">
                            <td><%= ctype.description %>
                            <td class="actions"><%= link_to 'Show', ctype %></td>
                            <td class="actions"><%= link_to 'Edit', edit_ctype_path(ctype) %></td>
                            <td class="actions"><%= link_to 'Delete', ctype, :confirm => 'Are you sure?', :method => :delete %></td>
                          </tr>
                        <% end %>
                        </table>
                        
                    <% end %>

                    <br />

                    <%= link_to 'New Client Type', new_ctype_path %>
                </div>
            </div>
        </div>
	</div>

    <%= render :partial => "home/navigation" %>
	
	<div class="clearer"><span></span></div>

    <%= render :partial => "home/footer" %>

</div>       