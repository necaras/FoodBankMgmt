<div class="container">

	<%= render :partial => "home/header" %>

	<div class="main">

		<div class="item">

			<div class="date">
				<div>&nbsp</div>
				<span>&nbsp</span>
			</div>

			<div class="content">
				<h1>Showing Client Type</h1>

				<div class="body">  

					<% if not notice.nil? %>
						<p id="notice"><%= notice %></p>
					<% end %>
					
					<p>
						<b>Description:</b>
						<%= @ctype.description %>
					</p>

					<%= link_to 'Edit', edit_ctype_path(@ctype) %> |
					<%= link_to 'Back', ctypes_path %>
				</div><!--body-->
			</div><!--content-->
		</div><!--item-->
	</div><!--main-->

	<%= render :partial => "home/navigation" %>

	<div class="clearer"><span></span></div>

	<%= render :partial => "home/footer" %>

</div><!--container-->
