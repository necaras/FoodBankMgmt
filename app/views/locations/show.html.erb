<div class="container">

    <%= render :partial => "home/header" %>
		
	<div class="main">

		<div class="item">
            
            <div class="date">
                <div>&nbsp</div>
                <span>&nbsp</span>
            </div>

            <div class="content">
                <h1>Showing Location</h1>
                
                <div class="body">                      
                    <p>
                      <b>City:</b>
                      <%= @location.city %>
                    </p>

                    <p>
                      <b>Province:</b>
                      <%= @location.province %>
                    </p>

                    <p>
                      <b>Country:</b>
                      <%= @location.country %>
                    </p>

                    <p>
                      <b>Description:</b>
                      <%= @location.jurisdiction_description %>
                    </p>
                    
                    <h2>Communities:</h2>
                    <table>
                      <tr width="100%">
                        <th>Name</th>
                        <th>Description</th>
                        <th width="8%"></th>
                        <th width="6%"></th>
                      </tr>
                    <%= render @location.communities %>
                    </table>

                    <%= link_to 'Add New Community to Location', new_community_path(:location_id => @location.id) %>
                    <br />                    

                    <%= link_to 'Edit', edit_location_path(@location) %> |
                    <%= link_to 'Back', locations_path %>
                </div>
            </div>
        </div>
	</div>

    <%= render :partial => "home/navigation" %>
	
	<div class="clearer"><span></span></div>

    <%= render :partial => "home/footer" %>

</div>  