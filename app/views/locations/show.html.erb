<div class="container">

	<%= render :partial => "home/header" %>

	<div class="main">

		<div class="item">

			<div class="date">
				<div>&nbsp</div>
				<span>&nbsp</span>
			</div>

			<div class="content">
				<h1>Showing Location</h1>

				<div class="body">  
					
					<% if not notice.nil? %>
						<p id="notice"><%= notice %></p>
					<% end %>  
					                    
					<p>
						<b>City:</b>
						<%= @location.city %>
					</p>

					<p>
						<b>Province:</b>
						<%= @location.province %>
					</p>

					<p>
						<b>Country:</b>
						<%= @location.country %>
					</p>

					<p>
						<b>Description:</b>
						<%= @location.jurisdiction_description %>
					</p>          

					<%= link_to 'Edit', edit_location_path(@location) %> |
					<%= link_to 'Back', locations_path %>
				</div><!--body-->
			</div><!--content-->
		</div><!--item-->
		
		<div class="item">

			<div class="date">
				<div>&nbsp</div>
				<span>&nbsp</span>
			</div>

			<div class="content">
				<h1>Communities</h1>

				<div class="body">
					<% if @location.communities.nil? || @location.communities.empty? %>

						<p>There are no communities in this location.</p>

					<% else %>

						<table>
							<tr width="100%">
								<th>Name</th>
								<th>Description</th>
								<th width="8%"></th>
								<th width="6%"></th>
							</tr>
							<%= render @location.communities %>
						</table>

					<% end %>

					<%= link_to 'Add New Community to Location', new_community_path(:location_id => @location.id) %>   				
				</div><!--body-->
			</div><!--content-->
		</div><!--item-->
				
				
	</div><!--main-->

	<%= render :partial => "home/navigation" %>

	<div class="clearer"><span></span></div>

	<%= render :partial => "home/footer" %>

</div><!--container-->
